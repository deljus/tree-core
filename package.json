{
  "name": "@deljuse/tree-core",
  "version": "0.0.3-development",
  "description": "",
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "scripts": {
    "clean": "rimraf ./lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && move-cli lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "prepack": "npm run build",
    "test": "mocha",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/deljus/tree-core.git"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "main": "./lib/cjs/index.js",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [],
  "author": "deljuse",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/deljus/tree-core/issues"
  },
  "homepage": "https://github.com/deljus/tree-core#readme",
  "devDependencies": {
    "@types/chai": "4.3.4",
    "@types/mocha": "10.0.1",
    "@types/node": "18.14.0",
    "@types/uuid": "9.0.0",
    "chai": "4.3.7",
    "mocha": "10.2.0",
    "move-cli": "2.0.0",
    "rimraf": "4.1.2",
    "semantic-release": "^20.1.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.2"
  }
}
