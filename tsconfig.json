{
  "compilerOptions": {
    "baseUrl": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "files": [
    "./src/index.ts",
    "./src/shared-kernel.d.ts"
  ],
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules"
  ]
}