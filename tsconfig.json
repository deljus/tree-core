{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ]
  },
  "files": [
    "./src/index.ts",
    "./src/shared-kernel.d.ts"
  ],
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules"
  ]
}